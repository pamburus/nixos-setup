# font settings
font-size = 9
font-thicken = true

# general settings
theme = BlulocoDark
window-colorspace = display-p3
window-save-state = always

# local key bindings
keybind = alt+up=goto_split:top
keybind = alt+down=goto_split:bottom
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = ctrl+left=text:\x1bb
keybind = ctrl+right=text:\x1bf
keybind = cmd+enter=toggle_split_zoom
keybind = cmd+alt+enter=toggle_split_zoom
keybind = cmd+alt+up=new_split:up
keybind = cmd+alt+down=new_split:down
keybind = cmd+alt+left=new_split:left
keybind = cmd+alt+right=new_split:right
keybind = cmd+[=previous_tab
keybind = cmd+]=next_tab
keybind = cmd+shift+f=toggle_fullscreen

# tmux key bindings
keybind = cmd+d=text:\x02d
keybind = cmd+shift+d=text:tmux attach\x0a
keybind = cmd+shift+t=text:\x02c
keybind = ctrl+cmd+[=text:\x02p
keybind = ctrl+cmd+]=text:\x02n
keybind = ctrl+cmd+left=text:\x02h
keybind = ctrl+cmd+right=text:\x02l
keybind = ctrl+cmd+up=text:\x02k
keybind = ctrl+cmd+down=text:\x02j
keybind = ctrl+cmd+enter=text:\x02z
